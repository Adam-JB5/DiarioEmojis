<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">
    <LinearLayout
        android:id="@+id/rootLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">
        <ImageView
            android:id="@+id/imagenEmocion"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/happy"
            android:layout_marginBottom="12dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp">
            <Button android:id="@+id/btnFeliz" android:text="ðŸ˜"
                android:layout_width="0dp" android:layout_weight="1"
                android:layout_height="wrap_content"/>
            <Button android:id="@+id/btnTriste" android:text="ðŸ˜¢"
                android:layout_width="0dp" android:layout_weight="1"
                android:layout_height="wrap_content"/>
            <Button android:id="@+id/btnRelajado" android:text="ðŸ˜Ž"
                android:layout_width="0dp" android:layout_weight="1"
                android:layout_height="wrap_content"/>
            <Button android:id="@+id/btnEnojado" android:text="ðŸ˜’"
                android:layout_width="0dp" android:layout_weight="1"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <EditText
            android:id="@+id/inputNota"
            android:hint="Escribe tu nota..."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minLines="2"
            android:gravity="top|start"
            android:layout_marginBottom="12dp"/>
        <Button
            android:id="@+id/btnGuardar"
            android:text="Guardar nota"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"/>
        <Button
            android:id="@+id/btnGrabar"
            android:text="Grabar audio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"/>
        <Button
            android:id="@+id/btnReproducir"
            android:text="Reproducir audio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC"
            android:layout_marginBottom="8dp"/>
        <LinearLayout
            android:id="@+id/listaNotas"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</ScrollView>
